#include <bits/stdc++.h>

using namespace std;

int n, a, b, c;
vector <int> v, t, p;

int main(){
  cin >> n;
  for(int i = 0;i < n;i++){
    int x;
    cin >> x;
    if(x == 1){
      a++;
      v.push_back(i+1);
    }
    if(x == 2){
      b++;
      t.push_back(i+1);
    }
    else{
      c++;
      p.push_back(i+1);
    }
  }
  int ans = min(a, min(b, c));
  cout << ans << endl;
  for(int i = 0;i < ans;i++){
    cout << v[i] << ' ' << t[i] << ' ' << p[i] << endl;
  }
}
